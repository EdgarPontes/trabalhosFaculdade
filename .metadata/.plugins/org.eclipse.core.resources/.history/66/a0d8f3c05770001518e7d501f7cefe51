package br.com.tecnonoticias.exemplo;

import java.awt.Container;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class MenusCaelun {

	private JFrame janela;

	// main e montaTela

	public static void main(String[] args) {
		new MenusCaelun().montaTela();
	}

	public void montaTela() {
		preparaJanela();
		preparaPainelPrincipal();
		preparaBotaoCarregar(janela);
		preparaBotaoSair(janela);
		mostraJanela();
	}

	private void preparaJanela() {
		janela = new JFrame("Argentum");
		janela.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

	}

	private void preparaPainelPrincipal() {
		JPanel painelPrincipal = new JPanel();
		janela.add(painelPrincipal);

	}

	private void preparaBotaoCarregar(Container painelPrincipal) {
		JButton botaoCarregar = new JButton("Carregar XML");
		botaoCarregar.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				new EscolhedorDeXML().escolhe();
			}
		});
		painelPrincipal.add(botaoCarregar);

	}

	private void preparaBotaoSair(Container painelPrincipal) {
		JButton botaoSair = new JButton("Sair");
		botaoSair.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				System.exit(0);
			}
		});
		painelPrincipal.add(botaoSair);

	}

	private void mostraJanela() {
		janela.pack();
		janela.setSize(540, 540);
		janela.setVisible(true);
	}

}