package br.com.tecnonoticias.ser;

import java.awt.Component;
import java.util.Random;

public class Ser {

	public String nome;
	public int linha;
	public int coluna;
	public int vida;
	public static int distancia;
	int x;	//AQUI É A COORDENADA X
	int y;	//AQUI É A COORDENADA Y
	boolean vai ;
	boolean volta ;
	
	public Ser(String nome) throws InterruptedException {

		this.nome = nome;
		linha = randomAparecer(800);
		coluna = randomAparecer(600);
		vida = 100;
		distancia = 10;
	}
	
	public int moverX(int ser, int telaC, int telaF) {
		if (ser < telaC) {
			vai = true;	
			volta = false;
			}
		if (vai==true) {
			x += 3;	
			}
		
		if (ser > telaF) {
			vai = false;
			volta = true; 
			}
		if (volta == true) {
			x -= 3;
			}
		return x;
	}
	
	public int moverY(int ser, int telaC, int telaF) {
		if (ser < 10) {
			vai = true;
			volta = false;
		}
		if (vai==true) {
			y += 5;
		}
		if (ser > 400) {
			vai = false;
			volta = true;
		}
		if (volta==true) {
			y -= 5;
		}
		return y;
	}

	public boolean bateu(Component a, Component b) {
		int aX = a.getX();
		int aY = a.getY();
		int ladoDireitoA = aX+a.getWidth();
		int ladoEsquerdoA= aX;
		int ladoBaixoA= aY+a.getHeight();
		int ladoCimaA= aY;
		
		int bX = b.getX();
		int bY = b.getY();
		int ladoDireitoB = bX+b.getWidth();
		int ladoEsquerdoB= bX;
		int ladoBaixoB= bY+b.getHeight();
		int ladoCimaB= bY;
		
		boolean bateu = false;
		
		boolean cDireita=false;
		boolean cCima=false;
		boolean cBaixo=false;
		boolean cEsquerda=false;
		
		if(ladoDireitoA>=ladoEsquerdoB) {
			cDireita=true;
		}
		if(ladoCimaA<=ladoBaixoB) {
			cCima=true;
		}
		if(ladoBaixoA>=ladoCimaB) {
			cBaixo=true;
		}
		if(ladoEsquerdoA<=ladoDireitoB) {
			cEsquerda=true;
		}
		
		if(cDireita && cEsquerda && cBaixo && cCima) {
			bateu = true;
		}
			
		return bateu;
	}
	
	public Integer randomAparecer(Integer limite) throws InterruptedException {
		Thread.sleep(1000);
		
		Random random = new Random();		
		Integer numero = random.nextInt(limite);

		return numero*2+(numero/3);
	}
	
	public Integer random(Integer limite) {
		Random random = new Random();		
		Integer numero = random.nextInt(limite);

		return numero;
	}
	
	public int morrer(int a, int vida2) {
		return vida = vida2 - a;
	}
}